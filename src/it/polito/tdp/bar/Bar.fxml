      <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#doSimula" text="Avvia simulazione" />
            <TextArea fx:id="txtResult" VBox.vgrow="ALWAYS" />
